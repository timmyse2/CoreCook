@model Core_CodeFirst.Models.Comic

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Comic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ComicId" />
            <div class="form-group">
                <label asp-for="ComicName" class="control-label"></label>
                <input asp-for="ComicName" class="form-control" />
                <span asp-validation-for="ComicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MakerId" class="control-label"></label>
                <select asp-for="MakerId" class="form-control" asp-items="ViewBag.MakerId"></select>
                <span asp-validation-for="MakerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
